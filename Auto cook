while true do
    takerice()
    Sleep(DELAY_TAKE)
    taketomato()
    Sleep(DELAY_TAKE)
    takechicken()
    Sleep(DELAY_TAKE)
    takepepper()
    Sleep(DELAY_TAKE)
    takesalt()
    Sleep(DELAY_TAKE)
    takeonion()
    Sleep(DELAY_TAKE)
    rice() --9000
    Sleep(24700)
    onion() --10500
    --44200
    Sleep(25800)
    tomat() --9000
    Sleep(150)
    tambahan() --15000
    Sleep(3400)
    ambil()
    Sleep(100)
    goDrop()
end
